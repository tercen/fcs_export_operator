{
  "name": "Export FCS",
  "description": "Exports data from the crosstab view to FCS Files.",
  "tags": [
    "export"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/fcs_export_operator"
  ],
  "properties": [],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Channels",
            "type": "",
            "description": "Channel identifiers",
            "ontologyMapping": "variable",
            "crosstabMapping": "column",
            "cardinality": "1..n",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Events",
            "type": "",
            "description": "Event identifiers",
            "ontologyMapping": "observation",
            "crosstabMapping": "row",
            "cardinality": "1..n",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Measurement",
                "type": "numeric",
                "description": "Measurement values",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "1",
                "factors": []
              },
              {
                "kind": "MetaFactor",
                "name": "File Identifier",
                "type": "",
                "description": "Factor(s) used to split data into multiple FCS files",
                "ontologyMapping": "group",
                "crosstabMapping": "color",
                "cardinality": "0..n",
                "factors": []
              },
              {
                "kind": "MetaFactor",
                "name": "Annotation Factors",
                "type": "",
                "description": "Factor(s) used as annotations (e.g., UMAP coordinates, cluster ID)",
                "ontologyMapping": "pairing",
                "crosstabMapping": "label",
                "cardinality": "0..n",
                "factors": []
              }
            ]
          }
        ]
      }
    ],
    "outputSpecsV2": [
      {
        "kind": "OperatorJoinSpec",
        "description": "Export operator - outputs ZIP file with FCS files",
        "joinOperators": [
          {
            "kind": "JoinOperator",
            "joinType": "left",
            "leftPair": {
              "kind": "ColumnPair",
              "lColumns": [],
              "rColumns": []
            },
            "rightRelation": {
              "kind": "TableRelation",
              "attributes": [
                {
                  "kind": "Attribute",
                  "name": "filename",
                  "type": "string"
                },
                {
                  "kind": "Attribute",
                  "name": "mimetype",
                  "type": "string"
                },
                {
                  "kind": "Attribute",
                  "name": ".content",
                  "type": "string"
                }
              ]
            }
          }
        ]
      }
    ]
  }
}